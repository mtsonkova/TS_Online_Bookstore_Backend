{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",              // Change rootDir to 'src' to match your source files
    "outDir": "./dist",
    "baseUrl": ".",               // Base URL is project root
    "paths": {
      "@src/*": ["src/*"]         // Path alias mapping
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["src", "test"]
}

